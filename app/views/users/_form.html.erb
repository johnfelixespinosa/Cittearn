<%= form_for @user do |f| %>
  <form>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class:'form-control', placeholder:"AcousticLover" %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class:'form-control', placeholder:"StrummingAlong@gmail.com" %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.text_field :password, class:'form-control', placeholder:"8-12 characters" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.text_field :password_confirmation, class:'form-control', placeholder:"8-12 characters" %>
    </div>
    <div class="form-group">
      <%= f.submit 'Submit', class: 'btn-primary btn-lg'  %>
    </div>
  </form>
<% end %>