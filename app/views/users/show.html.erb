<strong>Welcome Back!</strong> <%= current_user.name %>

<div>
  <h3 class="text-center" >Your Songs</h3><br>
  <div class="d-flex card-group text-center">  
    <% current_user.songs.each do |song| %>
  
      <div class="card">
      <%# <img class="card-img-top" src=".../100px200/" alt="Card image cap"> %>
      <div class="card-body">
        <h5 class="card-title"><%= song.title %> by <%= song.artist %></h5>
          <div class="btn-group" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-secondary"><%= link_to "View", song_path(song) %></button>
            <button type="button" class="btn btn-secondary"><%= link_to "Edit", edit_user_song_path(@user, song) %></button>
            <button type="button" class="btn btn-secondary"><%= link_to "Delete", song_path(song), 
            data: {confirm: "Are you sure?"}, :method => :delete %> </button>
          </div>
      </div>

      <div class="card-footer">
        <small class="text-muted">
          <strong><%= song.tuning %></strong> Tuning
          <strong><%= song.difficulty %></strong> Level
        </small>
      </div>

      </div><br>
 
  <% end %>
  </div>

