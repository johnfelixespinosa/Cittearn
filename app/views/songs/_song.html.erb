<div class="jumbotron text-center">

  <% if song_belongs_to_user? %>
    <%= render "jumbonav" %>

    <% if !@song.chords.empty?%>
      <%= render "chords" %>
    <% end %>

  <% end %>
  

  <h1 class="display-4"><%= @song.title %></h1>
  <h2 class="display-4">by <%= @song.artist %></h2>
  
  <div class="form-row">
    <div class="container-group col-md-3">
      <h2 class="display-2">Key</h2>
      <p><%= @song.key %></p>
    </div>
    <div class="container-group col-md-3">
      <h2 class="display-2">Tuning</h2>
      <p><%= @song.tuning %></p>
    </div>
    <div class="container-group col-md-3">
      <h2 class="display-2">Difficulty</h2>
      <p><%= @song.difficulty %></p>
    </div>
    <div class="container-group col-md-3">
      <h2 class="display-2">Capo</h2>
      <p><%= @song.capo %></p>
    </div>
  </div>
  
  
  <p class="text-left"><%= simple_format(@song.lyrics) %></p>

</div>