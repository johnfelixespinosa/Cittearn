<%= form_for @song do |f| %>
  <div class="form-row">
    <div class="form-group col-md-5">
      <%= f.label :artist %>
      <%= f.text_field :artist, class:'form-control', placeholder:"Beatles" %>
    </div>
    <div class="form-group col-md-7">
      <%= f.label :title %>
      <%= f.text_field :title, class:'form-control', placeholder:"Daytripper" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-3">
      <%= f.label :tuning %>
      <%= f.text_field :tuning, class:'form-control', placeholder:"(select)" %>
    </div>
    <div class="form-group col-md-3">
      <%= f.label :key %>
      <%= f.text_field :key, class:'form-control', placeholder:"(select)" %>
    </div>
    <div class="form-group col-md-3">
      <%= f.label :difficulty %>
      <%= f.text_field :difficulty, class:'form-control', placeholder:"(select)" %>
    </div>
    <div class="form-group col-md-3">
      <%= f.label :capo %>
      <%= f.text_field :capo, class:'form-control', placeholder:"(select)" %>
    </div>
  </div>

  <div class="form-group col-lg-8">
    <div class="form-group">
      <%= f.label :lyrics %>
      <%= f.text_area :lyrics, :rows => "10", class:'form-control', placeholder:"Enter Lyrics" %>
    </div>
  </div>

  <div class="form-group col-lg-2">
    <div class="form-group">
      <%= f.label :chords_used %>
      <%= f.collection_check_boxes(:chord_ids, Chord.all, :id, :name) do |c| %>
      <%= c.label(class:"label-checkbox") { c.check_box + c.text } %>
     

        <% end %>
      <%= f.fields_for :chords, @song.chords.build do |chords_fields| %>
      <%= chords_fields.text_field :name %>
      <% end %>
    </div>
  </div>



  <div class="form row">
    <div class="col-sm-10">
      <%= f.submit 'Submit', class: 'btn-primary btn-lg'  %>
    </div>
  </div>
<% end %>